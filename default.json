{
    "baseBranches": ["main"],
    "labels": ["dependencies"],
    "rebaseWhen": "conflicted",
    "pruneBranchAfterAutomerge": true,
    "prConcurrentLimit": 0,
    "reviewersFromCodeOwners": true,
    "assigneesFromCodeOwners": true,
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchManagers": ["*"],
            "pinDigests": false
        },
        {
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true
        }
    ]
}
